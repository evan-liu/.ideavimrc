{
  "base_keymap": "JetBrains",
  "theme": "One Dark",

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank"
  },

  "features": {
    "copilot": false
  },

  "ui_font_size": 16,
  "buffer_font_size": 18,

  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },

  "gutter": {
    "line_numbers": false,
    "code_actions": false,
    "folds": true
  },

  "terminal": {
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },

  "chat_panel": {
    "button": false
  },

  "prettier": {
    "singleQuote": true,
    "semi": false,
    "bracketSameLine": true
  }
}
