{
  "base_keymap": "JetBrains",

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank"
  },

  "prettier": {
    "singleQuote": true,
    "semi": false,
    "bracketSameLine": true
  },

  "theme": "One Dark",
  "ui_font_size": 16,
  "buffer_font_size": 18,

  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "gutter": {
    "line_numbers": false,
    "code_actions": false,
    "folds": false
  },

  "collaboration_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "features": {
    "copilot": false
  },
  "chat_panel": {
    "button": false
  }
}
